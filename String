#Exemplos de strings e manipulação
#1°String estrutura for
for letra in "python":
    print('"in" em Python por caractere',letra)

#2°String com fatiamento
s = "Wendel"
s = s [1:4]
print('As letras selecionadas são:', s)

s = "Wendel"
s = s [:]
print('Todo contéudo selecionado é:', s)

s = "Wendel"
s = s [-6]
print('As letras de trás para frente:', s)

s = "Wendel"
s = s [0:]
print('Todo contéudo selecionado é', s)

#3°String com o operador in, exemplo de pesquisa

pergunta = input('Insira uma letra para saber se ela é pesquisável: ')
lista = ['a','b','c','d','e','f']
a = pergunta in lista
print(a)

#4Transforma em String
num = 123
type(num)
type(str(num))

#5Transfora em letras maiuscúlas e conta caracteres

a = "Wendel Vilaça de Assis".upper()
print(a)
print(len(a))

#6Retira espaços início e fim
retira_espaco = "  sobrando espaços   ".strip()

print(retira_espaco)
